<h1>Users</h1>

<%= link_to "New User", new_user_path, :class => "btn btn-success pull-right" %>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Roles</th>
    <th colspan=2>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name + " " + user.surname, user_path(user) %></td>
        <td>

        </td>
        <td><%= link_to "Add Role", user_new_role_path(user), :class => "btn btn-success btn-xs" %></td>
        <td><%= link_to "Edit", edit_user_path(user), :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Delete', user_path(user), :method => :delete, :data => {:confirm => "Are you sure you want to delete this user?"}, :class => 'btn btn-danger btn-xs pull-right' %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<div class="container-login">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">Login to InLink Online</h1>
        </div>

        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-login"}) do |f| %>
            <div class="row">
              <%= flash_messages if flash_messages? %>

              <div class="col-md-12">
                <%= f.input :email, :required => false, :autofocus => true %>
                <%= f.input :password, :required => false %>
                <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <%= f.button :submit, "Log In", :class => 'btn btn-primary' %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= render "devise/shared/links" %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>